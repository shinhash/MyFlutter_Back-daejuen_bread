<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">

    <!-- Appenders -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <Pattern>%d %5p [%c] %m%n</Pattern>
        </encoder>
    </appender>

    <appender name="console-infolog" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <Pattern>%d %5p %m%n</Pattern>
        </encoder>
    </appender>

    <!-- Logger -->
    <logger name="com.study" level="DEBUG" appender-ref="console" />
    <logger name="jdbc" level="DEBUG" appender-ref="console" />
    <logger name="jdbc.sqlonly" level="OFF" appender-ref="console" /> 
    <logger name="jdbc.sqltiming" level="DEBUG" appender-ref="console" /> 
    <logger name="jdbc.resultsettable" level="DEBUG" appender-ref="console" />
    <logger name="dev.hash.hashBackEnd" level="DEBUG" appender-ref="console" />
    <logger name="org.springframework" level="DEBUG" appender-ref="console" />

    <!-- Root Logger -->
    <root level="DEBUG">
        <appender-ref ref="console" />
    </root>
</configuration>